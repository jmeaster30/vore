{
  "name": "vorejs",
  "version": "0.1.0",
  "description": "libvore bindings for JavaScript/TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build:dev": "webpack --mode=development --watch --progress",
    "build:prod": "webpack --mode=production",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "webpack --mode=production",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmeaster30/vore.git"
  },
  "keywords": [
    "regex",
    "regular expressions",
    "verbose"
  ],
  "author": "John Easterday",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmeaster30/vore/issues"
  },
  "homepage": "https://github.com/jmeaster30/vore#readme",
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "prettier": "^2.8.3",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
